{% extends "AppBundle::baseAdmin.html.twig" %}

{% block title %}Administrace Lípapije.cz{% endblock %}

{% block pivaNadpis %}Administrace lokací{% endblock %}
{% block lokaceMenuActive %}active{% endblock %}
{% block body %}
    <script>
        $(document).ready(function () {
            $("#pridat-Lokaci-Obal").hide();

            $("#pridat-Lokaci-Button").click(function () {
                $("#pridat-Lokaci-Obal").slideDown(300);
            });


        });

    </script>

    <a class="waves-effect waves-light btn" id="pridat-Lokaci-Button"><i class="material-icons left">add</i>Přidat lokaci</a>
    <div class="row" id="pridat-Lokaci-Obal">

        <form action="{{ url("app_admin_lokaceulozit") }}" method="POST" class="col s6 offset-s3" >
            <div class="input-field col s6">
                <input id="jmeno" type="text" class="validate" name="jmeno">
                <label for="jmeno">Jméno lokace</label>
            </div>

            <div class="input-field col s6">
                <button class="btn waves-effect waves-light" type="submit" name="action">Uložit lokaci
                    <i class="material-icons right">send</i>
                </button>
            </div>    

        </form>

    </div>


    <div class="row">
        <div class="col s6 offset-s3">
            <table class=" bordered stripped centered hoverable">

                {% for lokace in lokace %}

                    <tr><td>{{ lokace.jmeno }}</td><td><a class="waves-effect waves-light btn" href="{{path('app_admin_lokacesmazat', {'lokaceId': lokace.id}) }}"><i class="material-icons left">delete</i>Smazat</a></td></tr>

                {% endfor %}

            </table>
        </div>
    </div>


{% endblock %}
